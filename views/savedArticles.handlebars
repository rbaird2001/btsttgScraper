<div class="container">
    <div class="row artCollection">
      <h2>Saved Articles</h2>
        <div class="col-xs-1-12 artMainColumn">
            <!-- article detail here -->
            {{#each articles}}
            <div class="row article jumbotron">
                <div class="col-xs-1-12 w-75">

                    <div class="row container title text-center">
                        <h3> {{this.title}} </h3>
                        <button type="button" class="addNote btn btn-outline-success" id={{this._id}} data-toggle="modal" data-target="#newNote">Add Note</button>
                    </div>

                    <div class="row container subtitle font-italic w-75">
                        <h4>{{this.sub}}</h4>
                    </div>
                    <div class="row container byline w-50">
                        <h6>{{this.byline}}</h6>
                    </div>
                    <div class="row container href text-center mb-3">
                        <p><a href={{this.href}}>{{this.href}}</a></p>
                    </div>
                    <div>
                      <h4>My Notes:</h4>
                      {{#each this.notes}}
                        <p>{{this.body}}</p>
                      {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
</div>

{{!-- Modal Setup --}}
<div class="modal fade" id="newNote" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea name="articleNote" id="articleNote" cols="30" rows="10"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

